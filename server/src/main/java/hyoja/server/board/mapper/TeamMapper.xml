<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper 
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
 
<mapper namespace="hyoja.server.board.mapper.TeamMapper">
 <select id="teamCount" resultType="int">
    SELECT
     COUNT(*)
    FROM team
  </select>
  
  <select id="teamList" resultType="hyoja.server.board.domain.TeamVO">
    SELECT
        *
    FROM team
  </select>
    
  <select id="teamDetail" parameterType="int" resultType="hyoja.server.board.domain.TeamVO">
    SELECT
        *
    FROM team
    WHERE
        TNO = #{tno}
  </select>
</mapper>